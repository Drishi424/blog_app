<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>My Blog</h1>
    <a class="btn" href="/posts/new">+ New Post</a>
    <% if (posts.length === 0) { %>
      <p>No posts yet.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <a href="/posts/<%= post.id %>/edit">Edit</a>
          <form method="POST" action="/posts/<%= post.id %>?_method=DELETE">
            <button type="submit">Delete</button>
          </form>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>